<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/activity_main_ime_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ime"
        android:inputType="textPersonName"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/activity_main_prezime_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prezime"
        android:inputType="textPersonName"
        android:ems="10"/>

    <EditText
        android:id="@+id/activity_main_adresa_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/adresa"
        android:ems="10" />

    <Button
        android:id="@+id/activity_main_submit_button"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/submit" />

    <Button
        android:id="@+id/activity_main_cancel_button"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/delete" />
    
</LinearLayout>
